
<div class="edit-title">
 <h1>Editing Book</h1>
</div>

 <!--エラーを教えてくれるよ-->
<% if @bookb.errors.any? %>
<div class="edit-error">

  <div class="edit-error-text">
    <h6>
      <%= @bookb.errors.count %> errors prohibited this book from being saved:
    </h6>
  </div>
    
     <div class="edit-error-message">
     <% @bookb.errors.full_messages.each do |message| %>
        <ul>
        <li><%= message %></li>
        </ul>
     <% end %>
     </div>
    
    <div class="error-red-5">
    </div>
    <div class="error-red-6">
    </div>
    <div class="error-red-7">
    </div>
    <div class="error-red-8">
    </div>

</div>
<% end %>

<%= form_with model: @bookb, url: update_book_path(@bookb.id), method: :patch do |f| %>

<div class="edit-text-title">
    <h5>Title</h5>
 <%= f.text_field :title %>
</div>
 
<div class="edit-text-body">
    <h5>Body</h5>
 <%= f.text_field :body %> 
</div>

<div class="edit-ok">
   <%= f.submit 'Update Book' %>  
</div>

<% end %>

<div class="edit-jump-w">
　<%= link_to "Show", book_path, style: "color:black;" %><!--showへ-->
  <span>|</span>
  <%= link_to "Back", index_book_path, style: "color:black;" %>　<!--indexへ-->
</div>




